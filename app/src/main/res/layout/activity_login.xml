<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    tools:context=".ui.activity.login.RegisterActivity">

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/logo1" />


    <EditText
        android:id="@+id/et_id_login"
        android:layout_width="@dimen/et_welcome_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/et_bg"
        android:hint="电话号码"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:padding="@dimen/et_padding" />

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="@dimen/et_welcome_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/et_bg"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="24"
        android:maxLines="1"
        android:padding="@dimen/et_padding" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/et_welcome_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        android:text="登录"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="忘记密码?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text=" 注册账号"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
    </LinearLayout>


</RelativeLayout>